{
  "name": "origin-backend",
  "version": "0.2.0",
  "description": "Origin Apollo is an Apollo Server for Origin Expert company in Canada.",
  "keywords": [],
  "author": "Mohamed Kharrat",
  "license": "Private",
  "private": true,
  "main": "server/app.js",
  "scripts": {
    "start": "nodemon server/app.js --inspect --exec babel-node",
    "clean": "rm -rf build && mkdir build",
    "build-server": "babel ./server --out-dir ./build",
    "build": "npm run clean && npm run build-server",
    "debug": "node --inspect ./build/app.js",
    "lint": "eslint .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@sentry/node": "^5.26.0",
    "@sentry/tracing": "^5.26.0",
    "apollo-server-express": "^2.16.1",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "chart.js": "^2.9.3",
    "chartjs-node-canvas": "^3.0.6",
    "cors": "^2.8.5",
    "cron": "^1.8.2",
    "dateformat": "^3.0.3",
    "downsize": "^0.0.8",
    "excel4node": "^1.7.2",
    "express": "^4.17.1",
    "express-jwt": "^5.3.3",
    "graphql": "^15.3.0",
    "graphql-fields": "^2.0.3",
    "html-to-xlsx": "^2.0.0",
    "html5-to-pdf": "^4.0.1",
    "i18n": "^0.10.0",
    "jsdom": "^16.3.0",
    "json-as-xlsx": "^1.1.5",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.19",
    "moment": "^2.27.0",
    "mssql": "^6.2.1",
    "nodemailer": "^6.4.11",
    "nodemailer-express-handlebars": "^4.0.0",
    "sequelize": "^6.3.4",
    "slugify": "^1.4.5",
    "url-join": "^4.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/node": "^7.12.1",
    "@babel/preset-env": "^7.11.5",
    "babel-plugin-root-import": "^6.5.0",
    "core-js": "^3.6.5",
    "eslint": "^7.6.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.1",
    "puppeteer": "^5.2.1",
    "regenerator-runtime": "^0.13.7"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "eslint": {
    "extends": [
      "airbnb-base",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "12"
          }
        }
      ]
    ],
    "plugins": [
      [
        "babel-plugin-root-import",
        {
          "rootPathPrefix": "-",
          "rootPathSuffix": "server"
        }
      ]
    ]
  }
}
